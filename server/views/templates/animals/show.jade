extends ../../layouts/master
block content
  h3 Animal
  
  
  form(method='post', action='/animals/#{animal._id}/delete')
    button.btn.btn-danger(type='submit') Delete Animal
    
  a.btn.btn-info(href='/animals/#{animal._id}/edit') Edit Animal  
  
  form(method='post', action='/animals/#{animal._id}/adopt')
    select(name='clientId')
      each client in clients
        option(value=client._id)= client.name
    button(type='submit') Adopt  
  
  .animal
    .photo(style='background-image:url("#{animal.photo}");')
    .info
      .name: a(href='/animals/#{animal._id}')= animal.name
      .description= animal.description
      .age= animal.age
      .gender= animal.gender
      .breed= animal.breed
      
