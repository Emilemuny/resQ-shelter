extends ../../layouts/master
block content
  h3 Animal
  
  
  if(!animal.isAdopted)
    h3 Adopt Animal
    form.form-inline(method='post', action='/animals/#{animal._id}/adopt')
      .form-group
        select#clientId.form-control.input-sm(name='clientId')
          each client in clients
            option(value=client._id)= client.name
      .form-group
        button.btn.btn-primary.btn-sm(type='submit') Adopt

  h3 Detail View

  .page-header
    h1= animal.name
  p= animal.description 
  
  table.table
    thead
      tr.active
        th Gender
        th Age
        th Species
        th Breed
    tbody
      tr.success
        td= animal.gender
        td= animal.age
        td= animal.species
        td= animal.breed
